#add rule to rsyslog-ng

# LOG ALL COMMANDS TO /VAR/LOG/COMMANDS.LOG VIA RSYSLOG
### whoami="$(whoami)@$(echo $SSH_CONNECTION | awk '{print $1}')"
### export PROMPT_COMMAND='RETRN_VAL=$?;logger -p local6.debug "$whoami [$$]: $(history 1 | sed "s/^[ ]*[0-9]\+[ ]*//" ) [$RETRN_VAL]"'

# prints only required command and realtime 
export PROMPT_COMMAND='RETRN_VAL=$?; logger -p local6.debug "$(date +"%Y-%m-%d %r"): $(history 1 | sed "s/^[ ]*[0-9]\+[ ]*//" ) [$RETRN_VAL]"'
